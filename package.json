{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "React starter boilerplate",
  "main": "src/index.html",
  "private": true,
  "scripts": {
    "build": "tsc && vite build",
    "check": "tsc --noEmit",
    "develop": "vite",
    "fix": "npm run fix:css && npm run fix:js",
    "fix:css": "npm run lint:css -- --fix",
    "fix:js": "npm run lint:js -- --fix",
    "format": "prettier --ignore-path .gitignore --write .",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint --ignore-path .gitignore 'src/**/*.css'",
    "lint:js": "eslint --ignore-path .gitignore 'src/**/*.{js,jsx,ts,tsx}'",
    "preview": "vite preview",
    "test": "vitest",
    "test:ci": "npm run test -- run --coverage",
    "server": "json-server --watch db.json --port 8080",
    "update": "npx npm-check-updates --format group --interactive",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcobiedermann/react-boilerplate.git"
  },
  "keywords": [
    "React",
    "JavaScript",
    "Boilerplate"
  ],
  "author": "Marco Biedermann",
  "bugs": {
    "url": "https://github.com/marcobiedermann/react-boilerplate/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@sentry/react": "^6.19.7",
    "@sentry/tracing": "^6.19.7",
    "@tanstack/react-query": "^5.17.1",
    "@tanstack/react-query-devtools": "^5.17.1",
    "axios": "^1.6.4",
    "date-fns": "^3.1.0",
    "i18next": "^21.8.16",
    "i18next-browser-languagedetector": "^6.1.4",
    "i18next-http-backend": "^1.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-hook-form": "^7.49.2",
    "react-i18next": "^11.18.3",
    "react-router-dom": "^6.3.0",
    "react-use": "^17.4.2"
  },
  "devDependencies": {
    "@storybook/react": "^8.0.9",
    "@testing-library/react": "^13.3.0",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/react-helmet": "^6.1.11",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/coverage-v8": "^1.5.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-storybook": "^0.8.0",
    "happy-dom": "^14.7.1",
    "husky": "^4.3.8",
    "json-server": "^0.17.4",
    "msw": "^2.2.14",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "storybook": "^8.0.9",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vitest": "^1.5.0"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
