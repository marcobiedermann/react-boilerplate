{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "React starter boilerplate",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc && vite build",
    "check": "tsc --noEmit",
    "develop": "vite",
    "fix": "npm run fix:css && npm run fix:js",
    "fix:css": "npm run lint:css -- --fix",
    "fix:js": "npm run lint:js -- --fix",
    "format": "prettier --ignore-path .gitignore --write .",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint --ignore-path .gitignore 'src/**/*.css'",
    "lint:js": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "prepare": "husky",
    "preview": "vite preview",
    "test:ci": "npm run test -- run --coverage",
    "test": "vitest",
    "update": "npx npm-check-updates --format group --interactive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcobiedermann/react-boilerplate.git"
  },
  "keywords": [
    "React",
    "JavaScript",
    "Boilerplate"
  ],
  "author": "Marco Biedermann",
  "bugs": {
    "url": "https://github.com/marcobiedermann/react-boilerplate/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@sentry/react": "^7.119.1",
    "@tanstack/react-query": "^5.62.0",
    "@tanstack/react-query-devtools": "^5.62.0",
    "axios": "^1.7.8",
    "date-fns": "^4.1.0",
    "i18next": "^23.16.4",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-http-backend": "^2.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet": "^6.1.0",
    "react-hook-form": "^7.53.2",
    "react-i18next": "^15.1.3",
    "react-router-dom": "^6.27.0",
    "react-use": "^17.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@storybook/react": "^8.4.6",
    "@testing-library/react": "^16.0.1",
    "@types/react-dom": "^18.3.1",
    "@types/react-helmet": "^6.1.11",
    "@types/react": "^18.3.12",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "@vitest/coverage-v8": "^2.1.6",
    "eslint": "^9.16.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.1",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "happy-dom": "^15.11.7",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "msw": "^2.6.6",
    "prettier": "^3.4.1",
    "stylelint": "^16.11.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "typescript-eslint": "^8.16.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.1",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "**/*": "npm run format"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
